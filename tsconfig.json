{
    "compilerOptions": {
      "target": "ES2016", // Or newer
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true // Important for AX Tree potentially
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
  }